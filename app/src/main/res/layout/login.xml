<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_login">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/blanco"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textColor="@color/verde100"
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"/>

            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:hint="Username"
                android:inputType="text"
                android:textColor="@color/negro100"
                android:textColorHint="@color/negro10"
                android:padding="8dp"
                android:backgroundTint="@color/negro10" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="8dp"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColor="@color/negro100"
                android:textColorHint="@color/negro10"
                android:padding="8dp"
                android:backgroundTint="@color/negro10" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Log in"
                    android:padding="15dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/verde100"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:padding="15dp"
                    android:backgroundTint="@color/verde70"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/resetPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Reset Password"
                android:padding="15dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/gris50"
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_gravity="center"
                 />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
