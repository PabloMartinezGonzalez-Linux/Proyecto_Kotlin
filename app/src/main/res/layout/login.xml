<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_login">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/blanco"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textColor="@color/verde100"
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"/>

            <EditText
                android:textCursorDrawable="@null"
                android:id="@+id/email"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Email"
                android:textColorHint="@color/negro10"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:backgroundTint="@color/negro10"
                android:textColor="@color/negro100"/>

            <EditText
                android:textCursorDrawable="@null"
                android:id="@+id/pass"
                android:layout_width="220dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="ContraseÃ±a"
                android:textColorHint="@color/negro10"
                android:inputType="textPassword"
                android:padding="8dp"
                android:backgroundTint="@color/negro10"
                android:textColor="@color/negro100"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                >

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Log in"
                    android:padding="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/verde100"
                android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/verde70"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/resetPass"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/gris50"
                android:textColor="@android:color/white" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
