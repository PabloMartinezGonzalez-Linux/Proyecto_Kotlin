<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- EditText para la marca de la tarjeta -->
    <EditText
        android:id="@+id/etMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- EditText para el modelo de la tarjeta -->
    <EditText
        android:id="@+id/etModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modelo"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- ImageView para mostrar la imagen actual de la tarjeta -->
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/img_1"
        android:contentDescription="Imagen de la tarjeta"
        android:scaleType="centerCrop"/>

    <!-- Botón para cambiar la imagen -->
    <Button
        android:id="@+id/btnChangeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar imagen"
        android:backgroundTint="@color/verde30"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- Botón para guardar los cambios -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:backgroundTint="@color/verde30"
        android:textColor="@android:color/white"
        android:padding="10dp"/>

</LinearLayout>
